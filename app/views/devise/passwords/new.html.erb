<div class="container" data-controller="auth">
  <header class="header">
    <h1>forgot your <span class="highlight">password?</span></h1>
  </header>
  <div class="container container--constrain">
    <%= render 'feedback' %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field field--text">
        <%= f.label :email, class: "field__label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input" %>
      </div>
      <div class="actions">
        <%= f.submit "Send reset password instructions", class: "button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
