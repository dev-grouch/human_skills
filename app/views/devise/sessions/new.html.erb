<div class="container" data-controller="auth">
  <header class="header">
    <h1>log in</h1>
  </header>
  <div class="container container--constrain">
    <%= render 'feedback' %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field field--text">
        <%= f.label :email, class: "field__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input" %>
      </div>
      <div class="field field--text">
        <%= f.label :password, class: "field__label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "field__input" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field field--check">
          <%= f.label :remember_me, class: "field__label" do %>
            <%= f.check_box :remember_me, class: "field__input field__input--checkbox" %>
            <span>Remember me</span>
          <% end %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "login", class: "button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
