<%= turbo_frame_tag "skills_form", class: "skills__form" do %>
  <%= form_with(model: skill) do |f| %>
    <% if skill.errors.any? %>
      <div style="color: red">
        <ul>
          <% skill.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field field--text">
      <%= f.label :name, class: "field__label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field__input field__input--small" %>
    </div>
    <div>
      <%= f.submit "Save", class: "button button--small" %>
    </div>
  <% end %>
<% end %>
