<%
  form_model = skill.persisted? ? Skill.new : skill
%>
<%= turbo_frame_tag "skills__form", class: "skills__form" do %>
  <%= form_with(model: form_model, data: { skills_target: "createForm" }) do |f| %>
    <% if skill.errors.any? %>
      <div style="color: red">
        <ul>
          <% skill.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field field--text">
      <%= f.label :name, class: "field__label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field__input field__input--small", data: { action: "input->skills#search" } %>
    </div>
    <div>
      <%= f.submit "Save", class: "button button--small" %>
    </div>
  <% end %>
  <%= render 'search_form' %>
<% end %>
